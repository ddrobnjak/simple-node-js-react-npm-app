pipeline {
    agent any
    tools {
        nodejs 'node-js'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        disableConcurrentBuilds()
        skipDefaultCheckout()
    }
    stages {
        stage('Clean up') { 
            steps {
                deleteDir()
            }
        }
        stage('Clone') {
            steps {
                git credentialsId: '4f8dcf06-a320-4afd-914d-d7fa62be287c', url: 'git@github.com:ddrobnjak/simple-node-js-react-npm-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'ls -l'
            }
        }
    }
    //post {
    //    success {
    //        archiveArtifacts artifacts: 'my-go-app', followSymlinks: false 
    //    }
    //}
}
